<%= form_for @member do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, placeholder: "Name" %>
  <%= f.label :email %>
  <%= f.text_field :email, id: 'user_email', type:'email', required: true, placeholder: "Email"  %>
  <%= fields_for :attendances do |a| %>
      <%= a.label :primary_school %>
      <%= a.select :school_id1, @schools%>
      <%= a.label :secondary_school %>
      <%= a.select :school_id2, @schools%>
      <%= a.label :university %>
      <%= a.select :school_id3, @schools%>
  <% end %>
  <%= f.submit %>
<% end %>


